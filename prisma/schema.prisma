datasource db {
  provider = "sqlite" // или postgresql / mysql
  url      = "file:./dev.db"
}

generator client {
  provider = "prisma-client-js"
  output = "../src/generated/prisma"
}

model User {
  id       Int     @id @default(autoincrement())
  name     String
  email    String  @unique
  password String
  avatar   String?
}
